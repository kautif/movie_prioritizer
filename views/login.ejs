			<label>Username</label><input required type="text" name="username" id="new_user"><br>
			<label>Password: </label><input required type="password" name="password" id="new_pw"><br>
			<input type="submit" value="Sign Up">
		</form>

		<form method="post" action="/auth/login">	
			<label>Username</label><input required type="text" name="username" id="username"><br>
			<label>Password: </label><input required type="password" name="password" id="password"><br>
			<button type="submit">SUBMIT</button>
		</form>
	</main>
